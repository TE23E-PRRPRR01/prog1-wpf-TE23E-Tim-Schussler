<Window x:Class="SlumpaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlumpaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
<StackPanel>
     <Label Margin="10" Padding="10">Ange maxgräns</Label>
        <TextBox Margin="10" Padding="10" Width="200" Height="50" FontSize="25" TextAlignment="Center" Name="txbMax"></TextBox>


     <Label Margin="10" Padding="10">Slumpa ett tal 1-100</Label>
     <Button Margin="10" Padding="10" FontWeight="Bold" Click="KlickSlumpa">Slumpa!</Button>
     <TextBox Margin="10" Padding="10" Width="200" Height="150" FontSize="100" TextAlignment="Center" Name="txbResultat"></TextBox>
</StackPanel>
</Window>
