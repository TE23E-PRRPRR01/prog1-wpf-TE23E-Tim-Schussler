<Window x:Class="AritmetikApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label Margin="1" FontSize="20" FontWeight="bold">Aritmetiken</Label>
        <Label Margin="1" >Tal 1:</Label>
        <TextBox Margin="1" Name="txbTal1"></TextBox>
        <Label Margin="1">Operator (+,-,*,/)</Label>
        <TextBox Margin="1" Name="txbOperator"></TextBox>
        <Label Margin="1">Tal 2:</Label>
        <TextBox Margin="1" Name="txbTal2"></TextBox>
        <Button Click="KlickBeräkna" Margin="1">Beräkna</Button>
        <Label Name="lblResultat" Margin="1"></Label>

    </StackPanel>
</Window>
