<Window x:Class="BrannBollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrannBollApp"
        mc:Ignorable="d"
        Title="BrännbollApp"
        Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="30">Brännbollsräknaren</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Lag inne:</Label>
            <TextBox Width="100" Name="txbInne"></TextBox>
            <Label>Lag ute:</Label>
            <TextBox Width="100" Name="txbUte"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="KlickFrivarv" Margin="10" Padding="5" Width="100">Frivarv</Button>
            <Button Click="KlickBränning" Margin="10" Padding="5" Width="100">Bränning</Button>
            <Button Click="KlickLyra" Margin="10" Padding="5" Width="100">Lyra</Button>
            <Button Click="KlickVarv" Margin="10" Padding="5" Width="100">Varv</Button>
        </StackPanel>
        <Label>Historik</Label>
        <TextBox Width="450" Height="200" Name="txbHistorik"></TextBox>
    </StackPanel>
</Window>
